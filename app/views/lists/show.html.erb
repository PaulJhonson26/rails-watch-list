<nav class = "navbar-lewagon">
  <i class="fa-solid fa-film"></i>
  <div class = "navbar-options">
    <h4>my lists</h4>
    <h4><%= link_to "Add A list", new_list_path%></h4>
  </div>
</nav>
<h2><%= @list.name %></h2>
<div class="container">
  <% @list.bookmarks.each do|bookmark| %>
    <%if bookmark.photo.attached? %>
      <div class="card-bookmark"
        style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%=
        cl_image_path bookmark.photo.key, height: 300, width: 400, crop: :fill %>')">
        <h2><%= (bookmark.movie.title) %></h2>
      </div>
    <% else %>
        <div class="card-bookmark"
        style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%=
        cl_image_path "fnrtl44ouhfei16ce9ao", height: 300, width: 400, crop: :fill %>')">
        <h2><%= (bookmark.movie.title) %></h2>
      </div>
    <% end %>
  <% end %>
</div>
<%= link_to "Add a bookmark", new_list_bookmark_path(@list)%>
