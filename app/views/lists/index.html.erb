<nav class = "navbar-lewagon">
  <i class="fa-solid fa-film"></i>
  <div class = "navbar-options">
    <h4>my lists</h4>
    <h4><%= link_to "Add A list", new_list_path%></h4>
  </div>
</nav>
<div class = "banner">
  <h1>Save any kind of movies</h1>
</div>
<div class = "container">
  <h1>list of your lists</h1>
  <% @lists.each do |list| %>
    <% if list.photo.attached? %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%=cl_image_path list.photo.key, height: 300, width: 400, crop: :crop %>')">
        <%= link_to list_path(list) do %>
          <h3><%=list.name%></h3>
        <% end %>
      </div>
    <% else %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://res.cloudinary.com/dxjs6zmgn/image/upload/v1685110101/fnrtl44ouhfei16ce9ao.jpg')">
        <%= link_to list_path(list) do %>
          <h3><%=list.name%></h3>
        <% end %>
      </div>
    <% end %>

  <% end %>

</div>
